<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_admission_candidate_tree" model="ir.ui.view">
        <field name="name">admission.candidate.tree</field>
        <field name="model">admission.candidate</field>
        <field name="arch" type="xml">
            <tree string="Candidats">
                <field name="name"/>
                <field name="email"/>
                <field name="form_id"/>
                <field name="submission_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_admission_candidate_search" model="ir.ui.view">
        <field name="name">admission.candidate.search</field>
        <field name="model">admission.candidate</field>
        <field name="arch" type="xml">
            <search string="Rechercher un candidat">
                <field name="name"/>
                <field name="email"/>
                <field name="form_id"/>
                <separator/>
                <filter string="Nouveaux" name="new" domain="[('status', '=', 'new')]"/>
                <filter string="En cours" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Acceptés" name="accepted" domain="[('status', '=', 'accepted')]"/>
                <filter string="Refusés" name="rejected" domain="[('status', '=', 'rejected')]"/>
                <group expand="0" string="Regrouper Par">
                    <filter string="Formulaire" name="group_by_form" context="{'group_by': 'form_id'}"/>
                    <filter string="Statut" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'submission_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_admission_candidate_form" model="ir.ui.view">
        <field name="name">admission.candidate.form</field>
        <field name="model">admission.candidate</field>
        <field name="arch" type="xml">
            <form string="Candidat">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du candidat"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="email"/>
                            <field name="form_id"/>
                            <field name="response_id"/>
                        </group>
                        <group>
                            <field name="submission_date"/>
                            <field name="last_update_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Réponses" name="responses">
                            <field name="response_data" widget="json_viewer"/>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_admission_candidate" model="ir.actions.act_window">
        <field name="name">Candidats</field>
        <field name="res_model">admission.candidate</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_admission_candidate_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun candidat trouvé
            </p>
            <p>
                Les candidats seront créés automatiquement lors de la soumission
                des formulaires LimeSurvey ou lors de l'import manuel des réponses.
            </p>
        </field>
    </record>
</odoo> 