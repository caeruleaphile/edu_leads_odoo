<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_admission_form_template_form" model="ir.ui.view">
        <field name="name">admission.form.template.form</field>
        <field name="model">admission.form.template</field>
        <field name="arch" type="xml">
            <form string="Formulaire d'Admission">
                <header>
                    <button name="action_sync_form" 
                            string="Synchroniser" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_set_public" type="object"
                            string="Rendre Public" class="oe_highlight"
                            confirm="Êtes-vous sûr de vouloir rendre ce formulaire public ? Cela permettra à n'importe qui d'y répondre sans code d'accès."/>
                    <button name="action_disable_tokens" type="object"
                            string="Désactiver les Codes d'Accès" class="oe_highlight"
                            confirm="Êtes-vous sûr de vouloir désactiver les codes d'accès ? Cela permettra à n'importe qui de répondre au formulaire."/>
                    <field name="sync_status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_candidates" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-users">
                            <field name="candidate_count" widget="statinfo" string="Candidats"/>
                        </button>
                        <button name="action_open_form_url" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-external-link">
                            <span>Voir le Formulaire</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="title" class="oe_edit_only"/>
                        <h1><field name="title" placeholder="Titre du Formulaire"/></h1>
                    </div>
                    <group>
                        <group string="Informations LimeSurvey">
                            <field name="sid"/>
                            <field name="server_config_id"/>
                            <field name="owner"/>
                            <field name="is_active" widget="boolean_toggle"/>
                        </group>
                        <group string="Synchronisation">
                            <field name="last_sync_date" readonly="1"/>
                            <field name="form_url" widget="url" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Métadonnées" name="metadata">
                            <field name="metadata" widget="json_viewer"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_admission_form_template_kanban" model="ir.ui.view">
        <field name="name">admission.form.template.kanban</field>
        <field name="model">admission.form.template</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="active"/>
                <field name="sync_status"/>
                <field name="candidate_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge badge-success" t-if="record.active.raw_value">Actif</span>
                                    <span class="badge badge-warning" t-if="!record.active.raw_value">Inactif</span>
                                    <span class="badge badge-info" t-if="record.sync_status.raw_value == 'synced'">Synchronisé</span>
                                    <span class="badge badge-danger" t-if="record.sync_status.raw_value != 'synced'">Non Synchronisé</span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="candidate_count" widget="statinfo" icon="fa-user"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button name="action_import_responses" type="object" 
                                                class="btn btn-secondary btn-sm"
                                                title="Synchroniser les réponses">
                                            <i class="fa fa-refresh"/> Sync
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_admission_form_template_tree" model="ir.ui.view">
        <field name="name">admission.form.template.tree</field>
        <field name="model">admission.form.template</field>
        <field name="arch" type="xml">
            <tree string="Formulaires d'Admission">
                <field name="title"/>
                <field name="sid"/>
                <field name="server_config_id"/>
                <field name="is_active"/>
                <field name="sync_status"/>
                <field name="candidate_count"/>
                <field name="last_sync_date"/>
                <button name="action_sync_form" 
                        type="object" 
                        icon="fa-refresh" 
                        string="Synchroniser"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_admission_form_template_search" model="ir.ui.view">
        <field name="name">admission.form.template.search</field>
        <field name="model">admission.form.template</field>
        <field name="arch" type="xml">
            <search string="Rechercher un Formulaire">
                <field name="title"/>
                <field name="sid"/>
                <field name="server_config_id"/>
                <separator/>
                <filter string="Actifs" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Synchronisés" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="En Attente" name="pending" domain="[('sync_status', '=', 'pending')]"/>
                <filter string="En Erreur" name="error" domain="[('sync_status', '=', 'error')]"/>
                <separator/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Regrouper Par">
                    <filter string="Serveur" name="group_by_server" context="{'group_by': 'server_config_id'}"/>
                    <filter string="Statut" name="group_by_status" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_admission_form_template" model="ir.actions.act_window">
        <field name="name">Formulaires d'Admission</field>
        <field name="res_model">admission.form.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_admission_form_template_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun formulaire d'admission trouvé
            </p>
            <p>
                Les formulaires seront automatiquement synchronisés depuis LimeSurvey
                lors du test de connexion au serveur.
            </p>
        </field>
    </record>
</odoo> 